void paint_letter(char letter, int x, int y, int screen){
  point p = {font.width, font.height};
  point o = {x, y};
  point l;

  switch(letter){
    case 'a':
      l.x = 1;
      l.y = 2;
      break;
    case 'b':
      l.x = 2;
      l.y = 2;
      break;
    case 'c':
      l.x = 3;
      l.y = 2;
      break;
    case 'd':
      l.x = 4;
      l.y = 2;
      break;
    case 'e':
      l.x = 5;
      l.y = 2;
      break;
    case 'f':
      l.x = 6;
      l.y = 2;
      break;
    case 'g':
      l.x = 7;
      l.y = 2;
      break;
    case 'h':
      l.x = 8;
      l.y = 2;
      break;
    case 'i':
      l.x = 9;
      l.y = 2;
      break;
    case 'j':
      l.x = 10;
      l.y = 2;
      break;
    case 'k':
      l.x = 11;
      l.y = 2;
      break;
    case 'l':
      l.x = 12;
      l.y = 2;
      break;
    case 'm':
      l.x = 9;
      l.y = 4;
      break;
    case 'n':
      l.x = 7;
      l.y = 4;
      break;
    case 'o':
      l.x = 0;
      l.y = 4;
      break;
    case 'p':
      l.x = 0;
      l.y = 3;
      break;
    case 'q':
      l.x = 1;
      l.y = 3;
      break;
    case 'r':
      l.x = 2;
      l.y = 3;
      break;
    case 's':
      l.x = 3;
      l.y = 3;
      break;
    case 't':
      l.x = 4;
      l.y = 3;
      break;
    case 'u':
      l.x = 5;
      l.y = 3;
      break;
    case 'v':
      l.x = 6;
      l.y = 3;
      break;
    case 'w':
      l.x = 7;
      l.y = 3;
      break;
    case 'x':
      l.x = 8;
      l.y = 3;
      break;
    case 'y':
      l.x = 9;
      l.y = 3;
      break;
    case 'z':
      l.x = 10;
      l.y = 3;
      break;
    case ' ':
      l.x = 0;
      l.y = 0;
      return;
      break;
    case '1':
      l.x = 1;
      l.y = 1;
      break;
    case '2':
      l.x = 2;
      l.y = 1; 
      break;
    case '3':
      l.x = 3;
      l.y = 1; 
      break;
    case '4':
      l.x = 4;
      l.y = 1; 
      break;
    case '5':
      l.x = 5;
      l.y = 1; 
      break;
    case '6':
      l.x = 6;
      l.y = 1; 
      break;
    case '7':
      l.x = 7;
      l.y = 1; 
      break;
    case '8':
      l.x = 8;
      l.y = 1; 
      break;
    case '9':
      l.x = 9;
      l.y = 1; 
      break;
    case '(':
      l.x = 8;
      l.y = 0; 
      break;
    case ')':
      l.x = 9;
      l.y = 0; 
      break;
    case '-':
      l.x = 11;
      l.y = 4; 
      break;
    case '.':
      l.x = 8;
      l.y = 4; 
      break;
    case '?':
      l.x = 12;
      l.y = 1; 
      break;
    case '}':
      l.x = 2;
      l.y = 1; 
      break;
    case '{':
      l.x = 7;
      l.y = 0; 
      break;
    case '=':
      l.x = 10;
      l.y = 4; 
      break;
    case '*':
      l.x = 10;
      l.y = 0; 
      break;
    case '+':
      l.x = 11;
      l.y = 0; 
      break;
    case '!':
      l.x = 1;
      l.y = 0; 
      break;
    case '#':
      l.x = 3;
      l.y = 0; 
      break;
    case ':':
      l.x = 11;
      l.y = 1; 
      break;
    case ';':
      l.x = 12;
      l.y = 1; 
      break;

    default:
      break;
  }

  paint_sprite(font.data, p, o, screen, 10, 10, 10*l.x, 10*l.y);
}